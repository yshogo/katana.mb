<p>ここは投稿ページです</p>

<%= form_for @article do |f| %>

    <p>
      <%= f.hidden_field :uid %>
    </p>


    <p>
      タイトル<%= f.text_field :title, id:'title' %>
    </p>

    <p>
      <br>これは記事を書くとこ</br>
      <%= f.text_area :article, :size=>"80x30", id:'markdown' %>
    </p>

    <p>
      <%= f.submit 'save', class:'submit' %>
    </p>

<% end %>

<p id="preview"></p>