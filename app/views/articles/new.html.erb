<div id="container_main">
  <%= form_for @article do |f| %>

      <p>
        <%= f.hidden_field :uid %>
      </p>

      <div class="cell">
        <%= f.text_field :title, id: 'title' %>
        <%= f.text_area :article, id: 'markdown' %>
        <%= f.submit 'save', class: 'submit' %>
      </div>
  <% end %>


  <div class="cell">
    <p id="preview"></p>
  </div>
</div>