<% if @user != nil %>
    <div id="container_sidebar">
      <div class="side_bar">

        <p> <%= @user.nickname %> </p>

        <p><%= link_to '投稿', new_articles_path(uid: @user.uid), class: 'waves-effect waves-light btn' %></p>

        <div id="search">
          <p>Search!!!</p>

          <script>
              $(function () {
                  $('.datepicker').pickadate({
                      selectMonths: true,
                      selectYears: 15 // Creates a dropdown of 15 years to control year
                  });
              });
          </script>

          <%= form_tag(search_path, method: 'get') do %>
            <div class="input-field">
              <%= text_field_tag :free_word, params[:free_word], class:'validate' %>
              <label for="hoge">フリーワード</label>
            </div>
            <p>Term</p>

              <p>Start<%= date_field :start_date, params[:start_date] ,class:'date_picker' %></p>
              <p>End<%= date_field :end_date, params[:end_date] ,class:'date_picker' %></p>
              <%= submit_tag  '検索', class:'waves-effect waves-light btn' %>
          <% end %>
          </div>


</div>


<p><%= link_to 'Logout', logout_path, class: 'waves-effect waves-light btn' %></p>
</div>
<% end %>